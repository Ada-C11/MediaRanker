<header class="page-header">
  <h2>Add a new work</h2>
</header>

<section class="new-form">
  <%= form_with model: @work, class: "create-work" do |f| %>
    <select class="custom-select">
      <option selected>Select media type</option>
      <option value="album">Album</option>
      <option value="book">Book</option>
      <option value="movie">Movie</option>
    </select>
    
    <div class="form-group">
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
    </div>
    <div class="form-group">      
      <%= f.text_field :author, placeholder: "Author/artist", class: "form-control" %>
    </div>
    <div class="form-group">      
      <%= f.text_field :publication_year, placeholder: "Year of publishing", class: "form-control" %>
    </div> 
    <div class="form-group">
      <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add new work", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>