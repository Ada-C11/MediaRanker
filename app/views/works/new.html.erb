<h2>Add a new work</h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work do |form| %>
  <div>
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["album", "book", "movie"] %>
  </div>

  <div>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :creator, "Creator" %>
    <%= form.text_field :creator %>
  </div>

  <div>
    <%= form.label :publication_year, "Publication year" %>
    <%= form.text_field :publication_year %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description %>
  </div>

  <%= form.submit "Create Work" %>
<% end %>
