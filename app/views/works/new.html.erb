<h2>Add a new work</h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work do |form| %>
  <div class="form-group">
    <%= form.label :category, "Category" %>
    <%= form.select :category, ["album", "book", "movie"], {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :creator, "Creator" %>
    <%= form.text_field :creator, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :publication_year, "Publication year" %>
    <%= form.text_field :publication_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Work", class: "btn btn-primary" %>
  </div>
<% end %>
