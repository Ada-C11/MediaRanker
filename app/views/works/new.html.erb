<h2>Add a New Work</h2>

<section>
  <%= form_with model: @work do |f| %>
    <%= f.label :category %>
    <%# <%= f.select :category, Work.all.map {|author| [author.name, author.id] } %> %>
    <%= f.select :category, options_for_select(%w[album book movie]) %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Create Work" %>
  <% end %>
</section>
