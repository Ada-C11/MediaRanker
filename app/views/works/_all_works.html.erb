<table class="table">    
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr> 
  <% Work.sorted_works(category).each do |work| %>
    <tr>
      <td><%= work.votes.count %></td>
      <td><%= link_to "#{work.title}", work_path(work.id)  %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= link_to "Upvote", upvote_path(work.id), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
</table>