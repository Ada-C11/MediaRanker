<h2>Update Work</h2>


<%= form_with model: @work, class: 'update-work' do |f| %>

  <p>Please fill out this form to update a work</p>

  <%= f.label :category %>
  <%= f.select :category, %w[album book movie] %>
  <%= f.label :title%>
  <%= f.text_field :title%>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :creator%>
  <%= f.text_field :creator%>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year%>

  <br><br>

  <%= f.submit "Update Work", class: "work-form__submit-btn" %>

  <%= link_to "Cancel Changes", work_path %>
<% end %>
