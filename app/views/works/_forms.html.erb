<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>




<%= form_with model: @work, class: form_class do |f| %>
    
  <%= f.label :category %>
  <%= f.select :category, ["album","book","movie"] %>
  
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :created_by %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name, class: "forms__submit-btn" %>

<% end %>