<%= form_with model: @work, class: form_class do |f| %>

  <%= f.label :category %>
  <%= f.select :category, [['album'], ['book'], ['movie']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.submit action_name, class: "workform__submit-btn" %>

<% end %>