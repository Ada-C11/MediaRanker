<h2>List of Works</h2>

<section>
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% Work.albums.each do |work| %>
        <tr>
          <td><%= work.votes.length %></td>
          <td><%= link_to "#{work.title}", work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= "Vote" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

