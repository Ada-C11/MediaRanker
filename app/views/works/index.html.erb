<h1>List of Works</h1>
<% @works_by_category.each do |category, works| %>
<h2><%= category.capitalize %>s</h2>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
    <th>Downvote</th>
  </tr>
  <% works.sort { |work| work.votes.sum { |vote| vote.value } }.each do |work| %>
  <tr>
    <td><%= work.votes.count %>
    <td><%= link_to work.title, work_path(work.id) %></td>
    <td><%= work.creator %></td>
    <td><%= work.publication_year.strftime('%Y') %></td>
    <td><%= link_to 'Upvote', vote_path(id: work.id, value: 1), method: :post %></td>
    <td><%= link_to 'Downvote', vote_path(id: work.id, value: -1), method: :post %></td>
  </tr>
  <% end %>
</table>
<% end %>

<% "View top media" %>
<%= link_to "Add a new work", new_work_path %>
