<body>
  <section class="flash">
     <section class="flash">
    <% flash.each do |name, message| %>
      <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>

  <h3>Albums</h3>
  <table>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
    <% @albums.each do |work| %>
      <tr>
        <td><%= link_to "#{work.title}", work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.pub_year %></td>
      </tr>
    <% end %>
  </table>

