<h2>List of Works</h2>

<section class="media-table">
  <h4>Albums</h4>
  <table class="table">
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created by</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |work| %>
        <% if work.category == "album" %>
          <tr>
            <td><%= work.vote_ids.length %></td>
            <td><%= link_to work.title, work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><%= button_to "Upvote", work_votes_path(work.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

