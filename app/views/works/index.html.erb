

<% @categories.each do |catagory| %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Publication Year</th>
    </tr>
  </thead>
  <tbody>
  <% catagory.each do |work| %>
    <tr>
      <td><%= link_to work.title, work_path(work.id) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>