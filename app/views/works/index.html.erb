<h1>List of Works</h1>
<article>
<% @categories.each do |category| %>
<h4><%= category.name.capitalize %><h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
    <% category.works.each do |work|%>
      <tr>
        <td></td>
        <td><%= link_to work.title, work_path(work)%></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year%></td>
        <td></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% end %>
</article>

<button><%= link_to "View top media" %></button>
<button><%= link_to "Add a new work", new_work_path%></button>