<h2>List of Works</h2>

<section>
  <h3> Albums </h3>
  <% @works.each do |work| %>
    <% if work.category == "album" %>  
    <ul class="works-list">
      <li>
        <strong>Title:</strong> <%= link_to work.title, work_path(work.id) %>
        <strong>Creator:</strong> <%= work.creator %>
      </li>
    </ul>
    <% end %>
  <% end %>
</section>

