<h1>List of Works</h2>

<main>

  <h2>Albums</h2>

<table class="table">
    <thead>
      <tr>
        <th>Votes &nbsp; &nbsp; &nbsp;</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
     <% @albums.each do |album| %>
       <tr>
          <td>
            <%= album.votes_count %>
          </td>
          <td>
            <%= link_to "#{album.title}", work_path(album.id) %>
          </td>
          <td>
            <%= album.creator %>
          </td>
          <td>
            <%= album.publication_year %>
          </td>
          <td>
            Upvote
          </td>
        </tr>
        <% end %>
    </tbody>
</table>

