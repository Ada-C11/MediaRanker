
<section>
    <% spotlight = @works.sample%>
    <h1>Media Spotlight: <%= spotlight.title %> by <%= spotlight.creator%> <h2>
    <!--need to add # votes -->

</section>

<section>
    <h2>Top Movies</h2>
    <ul>
        <% @works.each do |work|%>
            <% category = work.category.downcase %>
            <% if  category == "movie"%>
                <li>
                    <%= link_to work.title, work_path(work.id) %>
                <li>
            <% end %>
        <% end %>
    <ul>
</section>

