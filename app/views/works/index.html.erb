<h2> List of Works </h2>

<% @categories.each do |media_group| %>

  <% if media_group.length >= 1 %>
    <h3><%= media_group.first.category.capitalize + "s" %></h3>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th class="tbl-votes">Votes</th>
        <th class="tbl-title">Title</th>
        <th class="tbl-creator">Creator</th>
        <th class="tbl-year">Publication Year</th>
        <th class="tbl-upvote">Upvote</th>
      </tr>
    </thead>
    <tbody>
    <% media_group.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", work_votes_path(work.id), method: :post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>