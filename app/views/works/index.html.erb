<h1>Works</h1>
<br>
  <section class="works-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Votes</th>
          <th scope="col">Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Published</th>
          <th scope="col"></th>
        </tr>
      </thead>
      
      <% @albums = Work.where(category: "album") %>
      
      <% @albums.each do |album| %>
        <tr>
          <td>TBD</td>
          <td><%= link_to album.title, work_path(album.id) %></td>
          <td><%= album.author %></td>
          <td><%= album.publication_year %></td>
          <td><button class="btn btn-primary btn-sm" role="button" >Upvote</button>
        </tr>
      <% end %>
    </table>
  </section>
  <br>

  <section class="works-table">
    <h4>Books</h4>
    <table class="table"> 
      <thead>
          <tr>
            <th scope="col">Votes</th>
            <th scope="col">Title</th>
            <th scope="col">Artist</th>
            <th scope="col">Published</th>
            <th scope="col"></th>
          </tr>
        </thead>
         
      <% @books = Work.where(category: "book") %>
      
      <% @books.each do |book| %>
        <tr>
          <td>TBD</td>
          <td><%= link_to book.title, work_path(book.id) %></td>
          <td><%= book.author %></td>
          <td><%= book.publication_year %></td>
          <td><button class="btn btn-primary btn-sm" role="button" >Upvote</button>
        </tr>
      <% end %>
    </table>
  </section>
  <br>
  
  <button class="btn btn-primary btn-lg" role="button" >View Top Works</button>

  <button class="btn btn-primary btn-lg" role="button" >Add a new work</button>
