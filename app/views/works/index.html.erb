<body>
  <main>

  <h1> List of Works </h1>

    <section>
      <h2> Books </h2>
      <ul>
      <%@works.where( category: "book").each do |book|%>
          <li>
          <p><%= link_to book.title, work_path(book.id)%></p>
          <p><%= book.creator %></p>
          <p><%= book.pub_yr %></p>
          </li>
      <%end%>
      </ul>
    </section>

    <section>
      <h2> Albums </h2>
      <ul>
      <% @works.where(category: "album").each do |album|%>
          <li>
          <p><%= link_to album.title, work_path(album.id)%></p>
          <p><%= album.creator %></p>
          <p><%= album.pub_yr %></p>
          </li>
      <%end%>
      </ul>
    </section>

    <section>
      <h2> Movies </h2>
      <ul>
      <% @works.where( category: "movie").each do |movie|%>
          <li>
          <p><%= link_to movie.title, work_path(movie.id)%></p>       
          <p><%= movie.creator %></p>
          <p><%= movie.pub_yr %></p>
          </li>
      <%end%>
      </ul> 
    </section>
    <%=link_to "View top media", root_path%>
    <%=link_to "Add a new work", new_work_path%> 
  </main>
</body>