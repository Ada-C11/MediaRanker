<h1>List of Works</h1>

<section class="albums">
<h2>Albums</h2>
    <table class="index-table">
        <tr>
            <th>Title</th>
            <th>Media Typle</th>
            <th>Creator</th>
            <th>Description</th>
            <%# <th>Votes</th> %>
        </tr>
    <% albums = @works.where(category: "album") %>
    <tr>
        <% albums.each do |work|%>
            <td>
            <%= link_to work.title, work_path(work.id) %>   
            </td>
            <td>
                <%= work.category %>
            <td>
                <%= work.creator %>
            </td>
            <td>
                <%= work.description %>
            </td>
        </tr>
        <% end %>
    </table>
</section>

