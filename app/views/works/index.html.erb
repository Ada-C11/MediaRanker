<h2>List of Works</h2>
<div class = "index-list">
<%Work.category.each do |category|%>

<h4><%=category.capitalize+"s"%></h4>
<table class = "table">
<thead>
<th scope ="col">Votes</th>
<th scope="col">Title</th>
<th scope="col">Created By</th>
<th scope="col">Published</th>
<th scope="col">Upvote</th>
</thead>
<tbody>
<% works = Work.media_votes(category)%>
<% if works != []%>

<% works.each do |work|%>
<tr>
    <td><%=work.vote_count%></td>
    <td><%=link_to "#{work.title}", work_path(work.id), method: :get %></td>
    <td><%=work.creator%></td>
   <td><%=work.publication_year%></td>
    <td><%=link_to "Upvote", work_votes_path(work.id), method: :post, class: "btn btn-primary" %></td>

   </tr>
  

<% end %>

<%end%>
</tbody>
</table>
<%end%>
<%=link_to "View top media", "/", class: "btn btn-secondary"%>
<%=link_to "Add a new work", new_work_path, class: "btn btn-primary"%>

</div>