<main>
    <h2>List of Works</h2>

<section>
    <h4>Albums</h4>
    <table class="table">
        <thead>
            <tr>
                <th width=80>Votes</th>
                <th>Title</th>
                <th>Created By</th>
                <th width=100>Published</th>
                <th width=100>Upvote</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <% @albums.each do |work|%>
                <td>
                <%= Vote.where(work_id: work.id).length %>   
                </td>
                <td>
                <%= link_to work.title, work_path(work.id) %>   
                </td>
                <td>
                    <%= work.creator %>
                </td>
                <td>
                    <%= work.publication_year %>
                </td>
                <td>
                    <%= button_to "Upvote", work_votes_path(work.id), method: :post,  :class => "btn btn-primary" %>
                </td>
            </tr>
        </tbody>
        <% end %>
    </table>
</section>

