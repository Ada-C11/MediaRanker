<section>
    <h2>Top Movies</h2>
    <ul>
        <% @works.each do |work|%>
            <% category = work.category.downcase %>
            <% if  category == "movie"%>
                <li>
                    <%= link_to work.title, work_path(work.id) %>
                <li>
            <% end %>
        <% end %>
    <ul>
</section>

