<h2>List of Works</h2>
<section class="table_container">
  <h4>Albums</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @works.albums_list.each do |album| %>
        <td><%=album.votes.length%></td>
        <td><%=album.title%></td>
        <td><%=album.creator%></td>
        <td><%=album.publication_year%></td>
        <td>Upvote</td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Books</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @works.books_list.each do |book| %>
        <td>Votes</td>
        <td><%=book.title%></td>
        <td><%=book.creator%></td>
        <td><%=book.publication_year%></td>
        <td>Upvote</td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Movies</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @works.movies_list.each do |movie| %>
        <td>Votes</td>
        <td><%=movie.title%></td>
        <td><%=movie.creator%></td>
        <td><%=movie.publication_year%></td>
        <td>Upvote</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>