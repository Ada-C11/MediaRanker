<h2>List of Works</h2>
<div class = "index-list">
<ul>
<h4>Albums</h4>
<% @works.each do |work|%>
  <% if work.category == "album"%>
    <li><%=link_to "#{work.title}", work_path(work.id), method: :get %></li>
  <%end%>
<% end %>
</ul>
<ul>
<h4>Books</h4>
<% @works.each do |work|%>
  <% if work.category == "book"%>
    <li><%=link_to "#{work.title}", work_path(work.id), method: :get %></li>
  <%end%>
<% end %>
</ul>

<ul>
<h4>Movies</h4>
<% @works.each do |work|%>
  <% if work.category == "movie"%>
    <li><%=link_to "#{work.title}", work_path(work.id), method: :get %></li>
  <%end%>
<% end %>

</ul>
</div>