<h2> List of Works </h2>
<section class="media-table">
  <h4> Movies </h4>
  <% if !Work.list("movie").empty? %>
    <table class="table">
      <thead>
        <tr>
          <th width="80"> Votes </th>
          <th> Title </th>
          <th> Created By </th>
          <th width="100"> Published </th>
          <th width="100"> Upvote </th>
        </tr>
      </thead>
      <% Work.list("movie").each do |movie|%>
        <tr>
          <td> 
            <%= movie.id %>
          </td>
          <td> 
            <%= link_to movie.title, work_path(movie.id) %>
          </td>
          <td> 
            <%= movie.creator %>
          </td>
          <td> 
            <%= movie.publication_year %>
          </td>
          <td> 
            <%= "Upvote" %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    No media available
  <% end %>
</section>

