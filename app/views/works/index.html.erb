
<main>
<h2>List of Works</h2>
<section class="media-table">
<h4>Albums</h4>
<table class="table">
<thead>
<tr>
<th>Votes</th>
<th>Title</th>
<th>Published</th>
<th>Upvote</th>
</tr>
</thead>
<tbody>
<tr>
  <% @albums.each do |album| %>
  <td>
  <%= link_to album.title, work_path(album) %>
  </td>
  <td>
  <%= album.creator %>
  </td>
  <td>
  <%= album.publication_date %>
  </td>
  <td>
  <%= link_to "Upvote", class: "btn btn-primary"%>
  </td>
  </tr>
  <% end %>
