
  <%= form_with model: @work, class: form_class do |f| %>

    <div>
    <%= f.label :category %>
    <%# f.select :category, Work.all.map {|work| [work.category] } %>
    <%= f.select :category, [
        ["movie", "movie"],
        ["book", "book"], 
        ["album", "album"]
    ] %>
    </div>

    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    </div>

    <div>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
    </div>

    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <div>
    <%= f.submit action_name, class: "btn btn-primary" %>
    </div>

  <% end %>
