<%= form_with model: @work do |f| %>
  <div class="form-group">
    <%=f.label :category, "Category:"%>
    <%= f.select :category, ["book", "movie", "album"], class: "form-control"  %>
  </div>
  <div class="form-group row">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title, class: "form-control" %>
        <%# <%= f.input :title, type: "text", class: "form-control" %> 
  </div>
  <div class="form-group row">
    <%=f.label :creator, "Created by:" %>
    <%= f.text_field :creator, class: "form-control"  %>
  </div>
  <div class="form-group row">
    <%=f.label :publication_year, "Published:" %>
    <%= f.text_field :publication_year, class: "form-control"  %>
  </div>
  <div class="form-group row">
  <%# <div class="space"></div> %>
    <%= f.submit "Submit", class: "button"%>
  </div>

<% end %> 