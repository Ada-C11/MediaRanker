<%= form_with model: @work, class: form_class do |f| %>

<% categories = ["album","book","movie"]%>
  <%= f.label :category %>
  <%= f.select :category, categories.map {|category| category} %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name, class: "work-form__submit-btn" %>

<% end %>