<% if @work.errors.any? %>
  <h3>Please try again:</h3>
  <ul>
    
      <% @work.errors.messages.each do |k, v| %>
        <% v.each do |msg| %>
        <li>
          <strong> <%= k %>:</strong> <%= msg %>
          </li>
        <% end %>
      
    </ul>
  <%end%>
<%end%>

<%= form_with model:@work do |f|%>

  <div class="field">
  <%= f.label(:category)%>
  <%= f.select(:category, options_for_select([['album', "album"],['book', "book"], ['movie', "movie"]])) %>
  <div>

  <div class="field">
  <%= f.label(:title)%>
  <%= f.text_field(:title) %>
  <div>

  <div class="field">
  <%= f.label(:creator)%>
  <%= f.text_field(:creator) %>
  <div>

  <div class="field">
  <%= f.label(:pub_yr)%>
  <%= f.text_field(:pub_yr) %>
  <div>

  <div class="field">
  <%= f.label(:description)%>
  <%= f.text_area(:description) %>
  <div>

  <div class="action">
  <%= f.submit "Create Work"%>
  <div>
<%end%> 