<%= form_with model:@work do |f|%>

<div class="field">
<%= f.label(:category)%>
<%= f.select(:category, options_for_select([['album', "album"],['book', "book"], ['movie', "movie"]])) %>
<div>

<div class="field">
<%= f.label(:title)%>
<%= f.text_field(:title) %>
<div>

<div class="field">
<%= f.label(:creator)%>
<%= f.text_field(:creator) %>
<div>

<div class="field">
<%= f.label(:publication_year)%>
<%= f.text_field(:publication_year) %>
<div>

<div class="field">
<%= f.label(:description)%>
<%= f.text_area(:description) %>
<div>

<div class="action">
<%= f.submit :button_text%>
<div>
<%end%>