<%= form_with model: @work, class: form_class do |f| %>

<h2>Add a new work</h2>
<%= f.label :category %>
<%= f.select :category, ["movie", "album", "book"] %>
<!-- maybe a better use for flatten? -->

<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :creator %>
<%= f.text_field :creator %>
<%= f.label :publication_year %>
<%= f.text_field :publication_year %>
<%= f.label :description %>
<%= f.text_field :description %>

<%= f.submit "Create Work", class: "work-form__submit-btn" %>
<% end %>