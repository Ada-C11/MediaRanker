<main>
  <% if @work.errors.any? %>
    <ul class="errors">
      <% @work.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @work, class: form_class do |f| %>

    <%= f.label :media %>
    <%= f.select :media, [["album"], ["movie"], ["book"]] %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :created_by %>
    <%= f.text_field :created_by%>

    <%= f.label :published %>
    <%= f.text_field :published %> <%# change to drop_down date field%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit action_name, class: "new-work__submit-btn" %>

  <% end %>
</main>
