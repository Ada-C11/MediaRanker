<%= form_with model: @work do |f| %>
  <div class="form-group">
    <%= f.label :category, 'Category' %>
    <%= f.select(:category, ['book', 'movie'], {include_blank: "album"}, { :class => 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group"> 
    <%= f.label :creator, 'Creator' %>
    <%=  f.text_field :creator %>
  </div>

  <div class="form-group">
    <%= f.label :publication_year, 'Publication Year' %>
    <%= f.text_field :publication_year %>
  </div>

  <div class="form-group">
    <%= f.label :description, 'Description' %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.submit button_text, class: "btn btn-primary" %>
  </div>
<% end %>



