<% if @work.errors.messages.any? %>
  <section class="error-messages">
    There were some issues with your submission
    <ul>
      <% @work.errors.messages.each do |column, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <%= column %>: <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @work, class: 'work-form' do |f| %>
  

  <div>
    <%= f.label :category %>
  <%= f.select :category, options_for_select(["Album", "Book", "Movie"]) %>
  </div>
  <div>
    <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
    <div>
    <%= f.label :creator %>
  <%= f.text_field :creator %>
  </div>
    <div>
    <%= f.label :publication_date %>
  <%= f.text_field :publication_date %>
  </div>
     <div>
    <%= f.label :description %>
  <%= f.text_field :description %>
  </div>

  <%= f.submit button_text, class: "btn btn-success" %>
  <% end %>
