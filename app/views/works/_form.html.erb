<%= form_with model: @work, class: 'work-form' do |f| %>
  
    <%= f.label :category %>
    <%= f.select :category, options_for_select(["album", "book", "movie"], selected=@work.category) %>
    
    <%= f.label :title, "Work Title (required):", class: 'work-label'%>
    <%= f.text_field :title, placeholder: "Title", class: 'work-input'%>
 
    <%= f.label :creator, "Creator: (required)", class: 'work-label' %>
    <%= f.text_field :creator, placeholder: "Creator", class: 'work-input' %>

    <%= f.label :publication_year, "Year published:", class: 'work-label' %>
    <%= f.text_field :publication_year, placeholder: "1977", class: 'work-input' %>

    <%= f.label :description, "Description:", class: 'work-label' %>
    <%= f.text_field :description, placeholder: "Description", class: 'work-input' %>
 
  <%= f.submit button_text, class: 'save-button' %>
<% end %>