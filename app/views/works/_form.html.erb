<%= form_with model: @work, class: form_class do |f| %>

  <%= f.label :category %>
  <%# f.select :category, Work.all.map {|work| [work.category] } %>
  <%= f.select :category, [
      ["movie", "movie"],
      ["book", "book"], 
      ["album", "album"]
  ] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name, class: "submit-button" %>

<% end %>