
<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work, class: form_class do |f| %>

  <p><%= intro_text %></p>

  <%= f.label :category %>
  <%= f.select :category
    [
        ["Album"],
        ["Book"],
        ["Movie"]
    ]
  
  %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :creator %>
  <%= f.text_field :creator%><br>

  <%= f.label :publication_year%>
  <%= f.text_field :creator%><br>

  <%= f.label :description r%>
  <%= f.text_area :description%><br>


  <%= f.submit action_name, class: "submit-btn" %>

<% end %>