<% if @work.errors.messages.any? %>
  <section class="alert alert-danger">
    There were some issues with your submission
    <ul>
      <% @work.errors.messages.each do |column, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <%= column %>: <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @work, class: 'work-form' do |f| %>
  <div class="form-group">
  <%= f.label :category, "Category" %>
  <%= f.select :category, ["album", "book", "movie"] %>
  </div>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field(:title) %>
  </div>

   <div class="form-group">
    <%= f.label :title, "Creator" %>
    <%= f.text_field(:creator) %>
  </div>

  <div class="form-group">
    <%= f.label :title, "Publication year" %>
    <%= f.text_field(:publication_year) %>
  </div>

  <div class="form-group">
    <%= f.label :title, "Description" %>
    <%= f.text_field(:description) %>
  </div>

  <div class="form-group">
    <%= f.submit button_text, class: "work-form__submit-btn btn btn-primary"%>
  </div>
<% end %>