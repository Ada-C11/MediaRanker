<%= form_with model: @work, class: 'work-form' do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(["album", "book", "movie"], selected=@work.category), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :title, "Work Title (required):"
    %>
    <%= f.text_field :title, placeholder: "Title", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :creator, "Creator: (required)"
     %>
    <%= f.text_field :creator, placeholder: "Creator", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :publication_year, "Year published:"
     %>
    <%= f.text_field :publication_year, placeholder: "1977", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description:"
     %>
    <%= f.text_field :description, placeholder: "Description", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit button_text, class: 'save-button' %>
  </div>
<% end %>
