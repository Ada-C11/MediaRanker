<h2><%=form_title%></h2>
<%= form_with model: @work do |f| %>
  
  <div>
    
      <%= f.label :category %>
      <%= f.select :category, [ ["album"], ["book"], ["movie"] ]  %>
   


      <%= f.label :title %>
      <%= f.text_field :title %>
   


      <%= f.label :creator %>
      <%= f.text_field :creator %>



      <%= f.label :publication_year %>
      <%= f.text_field :publication_year %>



      <%= f.label :description %>
      <%= f.text_field :description %>



      <%= f.submit 'create a new work' %>

  </div>
<% end %>