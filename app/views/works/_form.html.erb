<%= form_with model: @work, class: form_class do |f| %>

  <%= f.label :category %>
  <%= f.select :category, [
    
                  ["album"],
                  ["book"],
                  ["movie"]
  ] %> <br>
                  
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :creator %>
  <%= f.text_field :creator%><br>

  <%= f.label :publication_year%>
  <%= f.text_field :creator%><br>

  <%= f.label :description%>
  <%= f.text_area :description%><br>


  <%= f.submit action_name, class: "submit-btn" %>

<% end %>