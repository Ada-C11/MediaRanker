<main>
  <h2><%= form_title %></h2>
  <%= form_with model: @work do |f| %>
    <div>
      <p>
        <%= f.label :category %>
        <%= f.select :category, [ ["album"], ["book"], ["movie"] ]  %>
      </p>
      
      <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :creator %>
        <%= f.text_field :creator %>
      </p>

      <p>
        <%= f.label :pub_year %>
        <%= f.text_field :pub_year %>
      </p>

      <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </p>

      <p>
        <%= f.submit action_name, class:"btn btn-primary" %>
      </p>
    </div>
  <% end %>
</main>
