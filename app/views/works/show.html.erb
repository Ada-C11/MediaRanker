<section> 
  <h2> <%= @work.title %> </h2>
  <ul>
    <li> Category: <%= @work.category.capitalize %> </li>
    <li> Creator: <%= @work.creator %> </li>
    <li> Published: <%= @work.publication_year %> </li>
    <li> Description: <%= @work.description %> </li>
  </ul>
</section>

<section>
  <ul>
    <li>
      <%= link_to "Back to Media Ranks", root_path %>
    </li>
    <li>
      <%= link_to "Edit", edit_work_path(@work.id) %>
    </li>
    <li>
      <%= link_to "Upvote ###", "#" %>
    </li>
    <li>
      <%= link_to "Delete", work_path(@work.id), method: :delete %>
    </li>
  </ul>
</section>

