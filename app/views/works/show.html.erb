<section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
        <%= link_to "Back to media ranks", root_path, class: "btn btn-info" %>
        <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-info" %>
        <%= link_to "Upvote", work_votes_path(@work.id), class: "btn btn-info", method: :post %>
        <%= link_to "Delete", work_path(@work.id), method: :delete, class: "btn btn-danger" %>
    </section>
<section>

<section class="works-votes__container">
  <h3 class="works-votes__header"><%= @votes.count %> Votes for this <%= @work.category.capitalize.singularize %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.user.username, user_path(vote.user) %></td>
        <td><%= vote.created_at.to_date.to_formatted_s(:long) %></td>
      </li>
    <% end %>
  </ul>
</section>

