<h2><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year.strftime('%Y') %></p>
<p><%= @work.description %></p>
<section>
<%= link_to "Back to Media Ranks", works_path, class: "btn btn-primary" %>
<%= link_to "Edit", edit_work_path, class: "btn btn-primary" %>
<%= link_to "Upvote", vote_path(value: 1), method: :post, class: "btn btn-primary" %>
<%= link_to "Downvote", vote_path(value: -1), method: :post, class: "btn btn-primary" %>
<%= link_to "Delete", work_path(@work.id) , method: :delete, class: "btn btn-danger" %>
</section>
<section class="works-votes__container">
<h3><%= @work.votes.count %> votes for this <%= @work.category.capitalize %></h3>
<table class="table">
  <thead>
  <tr>
    <td>User</td>
    <td>Date</td>
    <td>Vote Type</td>
  </tr>
  </thead>
  <tbody>
<% @work.votes.each do |vote| %>
  <tr>
    <td><%= link_to vote.user.name, user_path(vote.user.id) %></td>
    <td><%= vote.date.strftime('%B %e, %Y') %></td>
    <td><%= vote.type %></td>
  </tr>
<% end %>
  </tbody>
</table>
</section>