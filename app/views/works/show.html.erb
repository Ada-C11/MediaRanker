  <article>
    <h3><%= @work.title %></h3>

    <p>
      Created by: <%= @work.creator %>
    </p>

    <p>
      Published: <%= @work.publication_year %>
    </p>

    <p>
      <%= @work.description %>
    </p>
    <div>
      <p class="button"><%= link_to "Back to media ranks", root_path %></p>
    </div>
    <div>
      <p class="button"><%= link_to "Edit", edit_work_path(@work.id) %></p>
    </div>
    <div>
      <p class="button"><%= link_to "Delete", work_path(@work.id), method: :delete, data: { confirm: "Are you sure that you want to delete this work of art?" } %></p>
    </div>
  </article>