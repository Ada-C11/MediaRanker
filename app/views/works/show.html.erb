<header class="details-page">
  <h2><%= @work.title %></h2>
    <section class="details">
      Created by: <%= @work.author %><br>
      Published: <%= @work.publication_year %><br>
      <%= @work.description %><br>
      Total votes: <%= @work.votes.length %>
    </section>
</header>
  
  <section class="actions">
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary btn-lg" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary btn-lg" %>
    <%= link_to "Upvote", work_votes_path(@work.id), method: :post, class: "btn btn-primary btn-lg" %>
    <%= link_to "Delete", class: "btn btn-danger btn-lg" %> 
  </section>
</header>

<section class="vote-details">
    <h4><%= @work.votes.length%> Votes for <%= @work.title %></h4>
    <table class="table"> 
      <thead>
          <tr>
            <th scope="col">User</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
         
      

    
     <% @work.users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <td><%= @work.created_at.strftime('%B %d, %Y') %></td>
      </tr>
    <% end %>
  </table>
</section>