<h2>
  <%= @work.title %>
</h2>
<section>
  <p>
    Created by: <%= @work.creator %>
  </p>
  <p>
    Published: <%= @work.publication_year %>
  </p>
  <p>
    <%= @work.description %>
  </p>
</section>
<section>
  <ul>
    <li class="btn btn-primary">
      <%= link_to "Edit", edit_work_path(@work) %>
    </li>
    <li class="btn btn-primary">
      <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Are you sure you want to delete this work?" } %>
    </li>
    <li class="btn btn-primary">
      <%= link_to "Upvote", upvote_path(@work), method: :post %>
    </li>
  </ul>
</section>
<section>
  <p>Votes:</p>
  <ul>
    <% @work.users.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>
</section>