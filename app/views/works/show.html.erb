<section> 
    <h2> <%= @work.title %> </h2>
    <p> Created by: <%= @work.creator %> </p>
    <p> Published: <%= @work.publication_year%> </p>
    <p> <%= @work.description %> </p>
</section>

<%= link_to "Back to Media Ranks", root_path, class: "btn btn-primary" %>
<%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
<%= link_to "Upvote", work_votes_path(@work), method: :post, class: "btn btn-primary" %>
<%= link_to "Delete", work_path(@work), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this #{@work.category}?" }%>

<section class='works-votes__container'>
    <% if @work.category%>
    <h3 class="works-votes__header"> <%= @work.votes.count%> votes for this <%= @work.category.capitalize %> </h2>
    <% end %>

    <table class='table'>
        <thead>
            <tr>
                <th> User </th>
                <th> Date </th>
            </tr>
        </thead>
        <tbody>
            <% @work.votes.each do |vote| %>
                <tr>
                    <td> <%= link_to vote.user.username, user_path(vote.user) %> </td>
                    <td> <%= vote.created_at.strftime("%b %d, %Y") %>
                </tr>
            <% end %>
        </tbody>
    </table>
</section>

