<h1><%= @work.title %></h1>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>

<p><%= link_to "Back to media ranks", root_path %></p>
<p><%= link_to "Edit", edit_work_path%></p>
<p><%= link_to "Upvote", work_votes_path(@work), method: "post" %></p>
<p><%= link_to "Delete", works_path(@work), method: :delete, data: { confirm: "You sure though?" }%></p>

<h3><%= @work.votes.length %> Votes for this <%= @work.category.capitalize %></h3>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @work.votes.each do |vote| %>
      <tr>
        <td><%= link_to User.find(vote.user_id).username, user_path(User.find(vote.user_id)) %></td>
        <td><%= vote.created_at.strftime("%B %d,%Y")%></td>
      </tr>
    <% end %>
  </tbody>
</table>
  

