<section>
  <h2><%= @work.title %></h2>
  <p> Created by <%= @work.creator %> </p>
  <p> Published: <%= @work.publication_year %> </p>
  <p> <%= @work.description %> </p>
  <section>
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", "#", rel: "nofollow", class: "btn btn-primary" %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Press OK to confirm deletion" }, class: "btn btn-danger" %>
  </section>
</section>

