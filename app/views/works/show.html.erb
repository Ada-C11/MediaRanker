<main>
    <h1><%= @work.title %></h1>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>

    <%= link_to "Back to Media Ranks", root_path, class: "btn btn-primary" %>

    <%= link_to 'Edit', edit_work_path, class: "btn btn-primary" %>

    <%= link_to "Upvote", upvote_work_path(@work.id), method: :post, class: "btn btn-primary" %>

    <%= link_to 'Delete', work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>

    <section class="works-votes__container">
        <h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% @work.users.each do |voter| %>
                    <tr>
                        <th> <%= link_to voter.username, user_path(voter.id) %> </th>
                        <th> <%= time_tag(voter.created_at.to_date) %> </th>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </section>
</main>