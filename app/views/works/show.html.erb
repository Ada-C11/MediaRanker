
<h1><%= @work.title %></h1>

<p><%= @work.creator %><p>

<p><%= @work.publication_year %><p>

<p><%= @work.description %><p>

<div role="button" class="btn btn-info">
  <%= link_to "Back to media ranks", root_path %>
</div>

<div role="button" class="btn btn-info">
  <%= link_to "Edit", edit_work_path(@work.id) %>
</div>

<div role="button" class="btn btn-info">
  <%= link_to "Upvote", vote_path(@work.id), method: :post %>
</div>

<div role="button" class="btn btn-danger">
  <%= link_to "Delete", work_path(@work.id), method: :delete, data: { confirm: "Are you sure you want to delete this work?" } %>
</div>

<h3><%= @work.votes.count %> Votes for this <%= @work.category%></h3>

<table class ="votes">
 <thead>
  <th>User</th>
  <th>Date</th>
  </thead>
  <tbody>
    <% @work.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.user.username, user_path(vote.user) %></td>
      <td> <%= vote.date %> </td>
    </tr>
    <% end %>
  </tbody>
</table>