<section>
  <h2><%= @work.title %></h2>
  <p> Created by <%= @work.creator %> </p>
  <p> Published: <%= @work.publication_year %> </p>
  <p> <%= @work.description %> </p>
  <section>
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", work_upvotes_path(@work.id), rel: "nofollow", method: :post, class: "btn btn-primary" %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: "Press OK to confirm deletion" }, class: "btn btn-danger" %>
  </section>
</section>

<section class="works-votes__container">
  <h3 class="works-votes__header">

    <%= @work.upvotes.length %> votes for this <%= @work.category %>
  </h3>
  <table class="table">
  <% if !@work.upvotes.empty? %>
    <% @work.upvotes.each do |vote| %>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= vote.user.username %> </td>
          <td><%=parse_date(vote.created_at) %> </td>
        </tr>
      <% end %>
  <% end %>
    </tbody>
  </table>
</section>