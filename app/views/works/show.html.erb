<h2> <%= @work.title %> </h2>
<p> Created by: <%= @work.creator %> </p>
<p> Published: <%= @work.publication_year %>

<%= link_to "Edit Work", edit_work_path(@work.id), class: "btn btn-primary" %>
<%= link_to "Upvote", upvote_path(@work.id), class: "btn btn-primary" %>
<%= link_to "Delete Work", work_path(@work.id), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>

<p> <%= @work.votes.count %> Votes for this <%= @work.category.capitalize %> </p>