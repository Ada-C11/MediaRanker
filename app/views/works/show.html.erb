<h2>
  <%= @work.title %>
</h2>
<p>
  Created by: <%= @work.creator %>
</p>
<p>
  Published: <%= @work.publication_year %>
</p>
<p>
  <%= @work.description %>
</p>

<%= link_to "Back to Media Rank", root_path, class: "btn btn-primary" %>
<%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
<%= link_to "Upvote", root_path, class: "btn btn-primary" %>
<%= link_to "Delete", work_path(@work), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>