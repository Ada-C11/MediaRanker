<%spotlight = Work.all.max_by { |work| work.votes.length } %>
<h2>
  Media Spotlight:
  <%= link_to spotlight.title, work_path(spotlight.id) %>, by <%= spotlight.author %>
</h2>
<p><%= spotlight.votes.length %> votes</p>
<br>

<div class="top-media-container">
  <article class="top-media-container">
    <h4 class="top-media-heading">Top 10 Albums</h4>
    <ul class="top-media">
      <% albums = Work.top_ten("album") %>
      <% albums.each do |album| %>
        <li class="top-media-item">
          <h5><%= link_to album.title, work_path(album.id) %></h5> by <%= album.author %>
          <p><%= album.votes.length %> votes</p>
        </li>
      <% end %>
    </ul>
  </article>
    
  <article class="top-media-container">
    <h4 class="top-media-heading">Top 10 Books</h4>
    <ul class="top-media">
      <% book = Work.top_ten("book") %>
      <% book.each do |book| %>
        <li class="top-media-item">
          <h5><%= link_to book.title, work_path(book.id) %></h5> by <%= book.author %>
          <p><%= book.votes.length %> votes</p>
        </li>
      <% end %>
    </ul>
  </article>
  
  <article class="top-media-container">
    <h4 class="top-media-heading">Top 10 Movies</h4>
    <ul class="top-media">
      <% movies = Work.top_ten("movie") %>
      <% movies.each do |movie| %>
        <li class="top-media-item">
          <h5><%= link_to movie.title, work_path(movie.id) %></h5> by <%= movie.author %>
          <p><%= movie.votes.length %> votes</p>
        </li>
      <% end %>
    </ul>
  </article>
</div>
