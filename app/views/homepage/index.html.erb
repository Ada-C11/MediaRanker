

<section class="spotlight">
    <h2 class="spotlight__header"> 
        <span class="spotlight__header--prefix">Media Spotlight</span>
        <%= link_to Work.find_most_voted.title, work_path(Work.find_most_voted.id), class: "spotlight__link-to" %> by <%= Work.find_most_voted.creator %>
    </h2>
    <p  class="spotlight__description">
    <%= Work.find_most_voted.vote_ids.length %> votes - <%= Work.find_most_voted.description %>
    </p>
 </section>

<hr class="root__hr" />

<section class="top-ten__container">
    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
        Top Movies
        </h2>
            <ul class="list-group top-ten__list">
                <% @top_10_movies = Work.find_top_ten("movie") %>
                <% if !@top_10_movies.nil? %>
                    <% @top_10_movies.each do |movie|%>
                        <li class="list-group-item">
                            <h4>
                                <%= link_to movie.title, work_path(movie.id) %> 
                                <small class="top-ten__creator">by <%= movie.creator %></small>
                            </h4>
                            <p><%= movie.vote_ids.length %> votes</p>
                        </li>
                    <% end %>
                <% end %>
            </ul>
    </section>

    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
        Top Books
        </h2>
            <ul class="list-group top-ten__list">
            <% @top_10_books = Work.find_top_ten("book") %>
            <% if !@top_10_books.nil? %>
                <% @top_10_books.each do |book|%>
                <li class="list-group-item">
                    <h4>
                        <%= link_to book.title, work_path(book.id) %>
                        <small class="top-ten__creator">by <%= book.creator %></small>
                    </h4>
                    <p><%= book.vote_ids.length %> votes</p>
                </li>
                <% end %>
            <% end %>
            </ul>
    </section>

    <section class="top-ten__list-container">
        <h2 class="top-ten__header">
        Top Albums
        </h2>
            <ul class="list-group top-ten__list">
                <% @top_10_albums = Work.find_top_ten("album") %>
                <% if !@top_10_albums.nil? %>
                    <% @top_10_albums.each do |album|%>
                    <li class="list-group-item">
                        <h4>
                            <%= link_to album.title, work_path(album.id) %> 
                            <small class="top-ten__creator">by <%= album.creator %></small>
                        </h4>
                        <p><%= album.vote_ids.length %> votes</p>
                    </li>
                    <% end %>
                <% end %>

            </ul>
    </section>

</section>