<section>
  <h3>Media Spotlight:

      <% if @no_data %>
      <%=@no_data %> </span></h3>
      <% else %>
      <%= link_to "#{@spotlight.title}", work_path(@spotlight)%> by <%= @spotlight.creator %>
 
  </h3>
  <p>
    <%= @spotlight.votes.count %> votes - <%= @spotlight.description %>
  </p>
  <% end %>
</section>
<hr class="root-hr" />

<section class='top-ten small-12 large-4 columns'>
  <h3>Top Movies</h3>
  <%= render partial: 'titles_column', locals: { media: @movies } %>
</section>

<section class='top-ten small-12 large-4 columns'>
  <h3>Top Books</h3>
  <%= render partial: 'titles_column', locals: { media: @books } %>
</section>

<section class='top-ten small-12 large-4 columns'>
  <h3>Top Albums</h3>
  <%= render partial: 'titles_column', locals: { media: @albums } %>
</section>
