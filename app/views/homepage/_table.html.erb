<table>
  <thead>
    <tr>
      <th>Top 10 Albums</th>
      <th>Top 10 Books</th>
      <th>Top 10 Movies</th>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", upvote_path(work_id: work.id), method: :post, class:"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>