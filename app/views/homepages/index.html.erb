<section class="media-spotlight">
    <h2>Media Spotlight: <%= @featured.title %> by <%= @featured.creator %></h2>
    <p><%= @featured.description %></p>
</section>

<section class="top-ten-container movies">
    <h2>Top Movies</h2>
    <ul>
        <% Work.top_ten("movie").each do |movie| %>
            <li>
                <%= link_to movie.title, work_path(movie) %> by <%= movie.creator %>
                <%= movie.users.length%> votes
            </li>
        <% end %>
    </ul>
</section>

