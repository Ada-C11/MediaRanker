<div>
  <h2 class='media_spotlight'>
    <% if @spotlight %>
      <strong>Media Spotlight:</strong> <u><%= link_to "#{@spotlight.title}", work_path(@spotlight.id)  %></u>  by <%=  @spotlight.creator %>  
    <% else %>
      <p>Media Spotlight: No Spotlight Today</p>
    <% end %>
  </h2>
</div>

<div  class='main_options' >
  <table class='main_options'>
    <tr>
      <th>Top Movies</th>
      <th>Creator</th>
      <th>Votes</th>

    <tr>
      <% @top_ten_movies.each do |movie| %>
      <td><%= link_to "#{movie.title}", work_path(movie.id) %></td>
      <td><%= movie.creator %></td>
      <td><%= movie.number_of_votes %></td>
    </tr>
      <% end %>
    </table>
  <table>
    <tr>
      <th>Top 10 Books</th>
      <th>Creator</th>
    <tr>
      <% @top_ten_books.each do |book| %>
      <td><%= link_to "#{book.title}", work_path(book.id) %></td>
      <td><%= book.creator %></td>
    </tr>
    <% end %>
  </table>
  <table>
    <tr>
      <th>Top 10 Albums</th>
      <th>Creator</th>
    <tr>
      <% @top_ten_albums.each do |album| %>
      <td><%= link_to "#{album.title}", work_path(album.id) %></td>
      <td><%= album.creator %></td>
    </tr>
    <% end %>
  </table>
</div>