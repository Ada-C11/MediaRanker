<h2>Media spotlight:
  <% spotlight = Work.featured %>
  <%= link_to spotlight.title, work_path(spotlight) %>
  by <%= spotlight.creator %>
</h2>
<p> 
  <%= spotlight.users.count %> votes - <%= spotlight.description %>
</p>

<h2>Top Albums:</h2>
<% albums = Work.top_ten("album") %>
<ul>
  <% albums.each do |album| %>
    <li>
      <h4>
        <%= link_to album.title, work_path(album) %>
        <small>by <%= album.creator %></small>
      </h4>
      <p><%= album.users.count %> votes</p>
    </li>
  <% end %>
</ul>

