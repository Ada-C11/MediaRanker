<% if Work.all == nil%>
    <h3>Add Media to Vote For!</h3>
<% else %>
<h3>Media Spotlight: <%= link_to Work.spotlight.title, work_path(Work.spotlight.id)%> by <%= Work.spotlight.creator%> </h3>
<% end %>

<h2>Top Movies</h2>
<ul class="list-group top-ten__list">
<% Work.top_ten("movie").each.each do |a| %>
    <li class="list-group-item">
    <h4>
    <%= work_path(a)%> <%=a.title%>
    <small class= "top-ten__creator">by <%=a.creator%></small>
    </h4>
    <p><%=Vote.where(work_id: a.id).count%> votes</p>
    </li>
    <% end %>
</ul>

