<main class="homepage">
    <section class="spotlight">
    <% spotlight = @works.sample %>
    <h2>Media spotlight: <%= link_to spotlight.title, work_path(spotlight.id) %> by <%= spotlight.creator %></h2>
    <p><%= spotlight.description %></p>
    </section>

    <section class="top-books">
    <% top_book = @works.sample%>
    <h3>Top Books</h3>
    <%= top_book.title %> by <%= top_book.creator %>
    <p><%= rand(1..5)%> votes</p>
    </section>

    <section class="top-movies">
    <% top_movie = @works.sample%>
    <h3>Top Movies</h3>
    <%= top_movie.title %> by <%= top_movie.creator %>
    <p><%= rand(1..5)%> votes</p>
    </section>

    <section class="top-albums">
    <% top_album = @works.sample %>
    <h3>Top Albums</h3>
    <%= top_album.title %> by <%= top_album.creator %>
    <p><%= rand(1..5)%> votes</p>
    </section>
</main>