    <h2>Top Books</h2>
    <ul>
        <% Work.top_ten("book").each do |book| %>
            <li>
                <%= link_to book.title, work_path(book) %> by <%= book.creator %>
                <%= book.users.length%> votes
            </li>
        <% end %>
    </ul>
</section>

