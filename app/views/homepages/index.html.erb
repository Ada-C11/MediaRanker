<main>
<section class="spotlight">
<h2 class="spotlight__header">
<span class="spotlight__heaser--prefix">
Media Spotlight:
</span>
<%= link_to @spotlight.title, work_path(@spotlight), class: "spotlight__link-to" %> by <%= @spotlight.creator %>
</h2>
<p class="spotlight__description">
<%= @spotlight.description %>
</p>
</section>
<hr class="root__hr">
<section class="top-ten__container">
<section class="top-ten__list-container">
<h2 class="top-ten__header">
Top Movies
</h2>
<ul clas="list-group top-ten__list">

<% @top_ten_movies.each do |movie| %>

<li class="list-group-item">
<h4>
<%= link_to movie.title, work_path(movie)%> 
by <small class="top-ten__creator><%= movie.creator %></small>

</h4>
</li>
</ul>
</section>
<% end %>

<section class="top-ten__list-container">
<h2 class="top-ten__header">
Top Books
</h2>
<ul clas="list-group top-ten__list">

<% @top_ten_books.each do |book| %>

<li class="list-group-item">
<h4>
<%= link_to book.title, work_path(book)%> 
by <small class="top-ten__creator><%= book.creator %></small>
</h4>
</li>
</ul>
</section>
<% end %>



<section class="top-ten__list-container">
<h2 class="top-ten__header">
Top Albums
</h2>
<ul clas="list-group top-ten__list">

<% @top_ten_albums.each do |album| %>

<li class="list-group-item">
<h4>
<%= link_to album.title, work_path(album)%> 
by <small class="top-ten__creator><%= album.creator %></small>
</h4>

</li>
</ul>
</section>
<% end %>

</section>
