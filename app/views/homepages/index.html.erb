<section class="spotlight">
<% if Work.all == nil%>
    <h3 class="spotlight__header">Add Media to Vote For!</h3>
<% else %>
<h3 class="spotlight__header">Media Spotlight: <%= link_to Work.spotlight.title, work_path(Work.spotlight.id)%> by <%= Work.spotlight.creator%> </h3>
<% end %>
</section>

<section class= "top-ten__container">
    <section class= "top-ten__list_container">
<h2 class= "top-ten__header">Top Movies</h2>
<ul class="list-group top-ten__list">
<% Work.top_ten("movie").each do |a| %>
    <li class="list-group-item">
    <h4>
    <a href= <%= work_path(a)%>><%=a.title%></a>
    <small class= "top-ten__creator">by <%=a.creator%></small>
    </h4>
    <p><%=Vote.where(work_id: a.id).count%> votes</p>
    </li>
    <% end %>
</ul>
</section>

