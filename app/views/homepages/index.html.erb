<h2>Media Spotlight</h2>

<section class="top-10_container">
  <section class="top-10_list_container">
    <h2 class="top-10_header">
    Top Movies
    </h2>
    <ul class="list-group top-10_list">
      <% @top_movies.each do |movie| %>
        <li class="list-group-item">
          <h4><%= movie[:title] %></h4>
          <h6>by <%= movie[:creator] %></h6>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-10_list_container">
    <h2 class="top-10_header">
    Top Books
    </h2>
    <ul class="list-group top-10_list">
      <% @top_books.each do |book| %>
        <li class="list-group-item">
          <h4><%= book[:title] %></h4>
          <h6>by <%= book[:creator] %></h6>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="top-10_list_container">
    <h2 class="top-10_header">
    Top Albums
    </h2>
    <ul class="list-group top-10_list">
      <% @top_albums.each do |album| %>
        <li class="list-group-item">
          <h4><%= album[:title] %></h4>
          <h6>by <%= album[:creator] %></h6>
        </li>
      <% end %>
    </ul>
  </section>


</section>



