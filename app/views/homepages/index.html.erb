<section>
  <h2>Media Spotlight</h2>
  <% spotlight = Work.get_spotlight %>
  <strong>
    <%= spotlight.title %>
  </strong>
  by <%= spotlight.creator %>
  <%= spotlight.description %>
</section>
<h2>Top Movies</h2>
  <% movies = Work.get_top_ten("movie") %>
  <% movies.each do |movie| %>
    <li>
      <strong>
        <%= link_to "#{movie.title}", work_path(movie.id) %>
      </strong>
      by <%= movie.creator %>
    </li>
  <% end %>
