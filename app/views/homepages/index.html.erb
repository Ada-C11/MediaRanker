

<% if @spotlight %>
  <section class="spotlight">
    <h2>Media Spotlight: <%= @spotlight.title + " by " + @spotlight.creator %></h2>
    <p><%= @spotlight.description %></p>
  </section>
<% end %>

<section class="top-ten grid">
  <section class="top-media top-movies">
    <h2>Top Movies</h2>
      <ul>
        <% @top_ten[2].each do |work| %>
          <li><%= work.title %> <%= "by " + work.creator %></li>
        <% end %>
      </ul>
  </section>
  <section class="top-media top-books">
      <h2>Top Books</h2>
      <ul>
        <% @top_ten[1].each do |work| %>
          <li><%= work.title %> <%= "by " + work.creator %></li>
        <% end %>
      </ul>
  </section>
  <section class="top-media top-albums">
      <h2>Top Albums</h2>
      <ul>
        <% @top_ten[0].each do |work| %>
          <li><%= work.title %> <%= "by " + work.creator %></li>
        <% end %>
      </ul>
  </section>

</section>
