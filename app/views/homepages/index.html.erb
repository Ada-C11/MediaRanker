<section class="spotlight">
  <h2 class="spotlight__header">
    <span class="spotlight__header--prefix">
      Media Spotlight
    </span>
  </h2>
    <% spotlight = Vote.spotlight %>
    <% if spotlight %>
      <%= link_to spotlight.title, work_path(spotlight.id) %>
      by <%= spotlight.creator %>
      <p class="spotlight__description"> <%= spotlight.votes.length %> votes -
      <%= spotlight.description %> </p>
    <% end %>
</section>
<hr class="root__hr" />

