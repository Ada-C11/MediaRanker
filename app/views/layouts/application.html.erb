<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Gudea" rel="stylesheet">
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        <a href="root_path">MediaRanker</a>
        <small>| Ranking the Best of Everything
      </h1>
        <nav class="app-header__nav">
          <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
          <%= link_to "View top media", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
          <%= link_to "View all media", works_path, class: "nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
          <%= link_to "Add new work", new_work_path, class: "nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
          <%= link_to "All Users", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
          <%= link_to "Login", login_path, class: "nav-link" if session[:user_id].nil? %>
          </li>
          </ul>
          <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
          <%= link_to "Logout", logout_path, method: :post, class: "nav-link" if session[:user_id] %>
          </li>
          <li class="nav-item app-header__nav_item">
          <%= link_to "Logged in as #{User.find(session[:user_id]).name}", user_path(session[:user_id]), class: "nav-link" if session[:user_id]%>
          </li>
          </ul>
        <nav>
        <% if flash.count > 0 %>
          <section class="alert__container">
            <div class="alert alert-success">
            <% flash.each do |name, message| %>
              <% if message.class == Array %>
                <ul>
                <% message.each do |msg| %>
                  <span><%= name %>: <%= msg %> </span>
                <% end %>
              <% else %>
                <%= message %>
              <% end %>
              </ul>
            <% end %>
            </div>
          </section>
        <% end %>
    </header>
    <%= yield %>
  </body>
</html>
