<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<nav>
  <ul>
    <li>
      <%= link_to "Top Media", root_path %>
    </li>
    <li>
      <%= link_to "All Media", works_path %>
    </li>
    <li>
      <%= link_to "Add New Work", new_work_path %>
    </li>
    <li>
      View All Users
    </li>
  </ul>
  <ul>
    <% if session[:user_id] == nil %>
      <li>
        <%= link_to "Log In", login_path %>
      </li>
    <%else%>
      <li>
        <%= link_to "Logged in as #{User.find_by(id: session[:user_id]).username}", current_user_path %>
      </li>
    <%end%>
    <li>
      <%= link_to "Log Out", logout_path, method: :post %>
    </li>
  </ul>
<%# link_to top media, all media, add new work, view all users%>
</nav>

<section class="flash">
    <% flash.each do |name, message| %>
      <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>

  <body>
    <%= yield %>
  </body>
</html>
