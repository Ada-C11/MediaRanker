<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-warning">
      <!-- Brand link or heading -->
      <%= link_to "Media Ranker", root_path, class: "navbar-brand" %>
      <!--<a class="navbar-brand" href="#">Media Ranker</a>-->
      <small> Ranking the Best of Everything </small>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          
          <!-- items on navigation -->
          <li class="nav-item">
            <%= link_to "View Top Media", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "View All Media", list_of_works_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Add A New Network", new_work_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "View All Users", users_path, class: "nav-link"%>
          </li>
          <li>
            <%= link_to("Login", login_path) if session[:user_id].nil? %>
            <%= link_to("Logout", logout_path, method: :post) if session[:user_id] %>
          </li>
        </ul>
      </div>
    </nav>

    <section class="flash">
        
        <% flash.each do |name, message| %>
            <div class="alert alert-danger">

          <% if message.class == Array %>
              <ul>
                <% message.each do |msg| %>
                  <li><%= name %>: <%= msg %> </li>
                <% end %>
          <% else %>
            <%= message %>
          <% end %>
              </ul>
            </div>
        <% end %>
       
      </section>

    <main>
    <%= yield %>
    </main>
  </body>
</html>
