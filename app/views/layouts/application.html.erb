<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  

  <header>
    <h1> Media Ranker Ranking the Best of Everything </h1>
    <nav>
      <ul>
        <li> <%= link_to "View top media", root_path %>  </li>
        <li> <%= link_to "View all media", works_path %> </li>
        <li> <%= link_to "Add a new work", new_work_path %> </li>
        <li> <%= link_to "View all users", users_path %> </li>
        <% unless session[:user_id] %>
          <li> <%= link_to "Log In", login_path %> </li>
        <% else %>
          <% user = User.find_by(id: session[:user_id]) %>
          <li> <%= link_to "Logged in as #{user.username}", user_path(user) %> </li>
          <li> <%= link_to "Log Out", logout_path, method: :post %> </li>
        <% end %>
      </ul>
    </nav>
  </header>

  <main>
      <% alert_type = flash[:status] == :error ? :danger : flash[:status] %>
      <section class="flash alert alert-<%= alert_type %>">
        <%= flash[:message] %>
      </section>
      <%= yield %>
  </main>

  <footer>
  </footer>

  </body>
</html>
