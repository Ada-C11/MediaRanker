<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1> Media Ranker | <small> Ranking the Best of Everything</small>
      </h1>
      <nav>
        <ul>
          <li> <%= link_to "View top media", root_path %> </li>
          <li> <%= link_to "View all media", works_path %></li>
          <li> <%= link_to "Add new work", new_work_path %></li>
          <li> <%= link_to "View all users", users_path %></li>
          <% if session[:user_id] %>
            <li> <%= link_to "Logged in as #{display_name(session[:user_id])}", user_path(session[:user_id]) %></li>
            <li> <%= link_to "Log out", logout_path, method: :post %></li>
          <%else%>
            <li> <%= link_to "Login", login_path %></li>
          <% end %>

        </ul>
      </nav>
    <header>

    <section class="flash">
     <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
     <% end %>
    </section>

    <%= yield %>
  </body>
</html>
