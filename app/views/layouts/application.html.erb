<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="site-header">
      <section class="site-title">
        <h1><%= link_to "Media Ranker", root_path %></h1>Ranking the best of everything
      </section>
      
      <nav>
        <ul class="nav">
          <li><%= link_to "View Top Media", root_path %></li>
          <li><%= link_to "View All Media", works_path %></li>
          <li><%= link_to "Add a New Work", new_work_path %></li>
          <li><%= link_to "View All Users", users_path %></li>
        </ul>
        
        <div class="Login">
          <% if @current_user %>
            <p>Logged in as <%= @current_user.username %></p>
            <%= link_to "Log Out", logout_path, class: "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Log In", login_path, class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </nav>
    </header>
    
    <main>
      <%= yield %>
    </main>
  </body>
</html>
