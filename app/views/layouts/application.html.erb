<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('owl.jpg') %>
  </head>

  <body>
    <header>
      <h1><%= link_to "Media Ranker", root_path %> | Ranking the Best of Everything</h3>
      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item"><h3><%= link_to "View top media", root_path %></h3></li>
          <li class = "nav-item app-header__nav_item"><h3><%= link_to "View all media", works_path %></h3></li>
          <li class = "nav-item app-header__nav_item"><h3><%= link_to "Add a new work", new_work_path %></h3></li>
          <li class = "nav-item app-header__nav_item"><h3><%= link_to "View all users", users_path %></h3></li>
        </ul>

        <ul class="nav app-header__user-nav-container">
          <% unless session[:user_id]%>
            <li class="nav-item app-header__nav_item"><%= link_to "Log In", login_path, class:"btn btn-primary"%></li>
          <% else %>
            <li class="nav-item app-header__nav_item"> <%= link_to "Logged in as #{User.find(session[:user_id]).username}", user_path(id: User.find(session[:user_id]).id), class:"btn btn-primary"  %></li>
            <li class="nav-item app-header__nav_item"><%= link_to "Log Out", logout_path, method: :post, class:"btn btn-primary"%></li>
          <%end%>
        </ul>
      </nav>

    <section class="flash">
      <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>

    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
    </footer>
  </body>
</html>

