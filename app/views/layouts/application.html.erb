<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header><h1>
<%= link_to "Media Ranker", root_path %>
| Ranking the Best of Everything
</h1>
<nav>
<ul>
<li><%= link_to "View top media", root_path %></li>
<li> <%= link_to "View all media", works_path %></li>
<li> <%= link_to "Add a new work", new_work_path %></li>
<li> <%= link_to "View all users", users_path %></li>
<li><%= link_to "Log in", login_path, class: "btn btn-primary" %></li>
<li><%= link_to "Log out", logout_path, method: :post, class: "btn btn-primary" %></li>
</ul>
</nav>
     <% if flash.count > 0 %>
        <section class="flash">
          <div class="alert alert-danger">
          <% flash.each do |name, message| %>
            <% if message.class == Array %>
              <ul>
              <% message.each do |msg| %>
                <li><%= name %>: <%= msg %> </li>
              <% end %>
            <% else %>
              <%= message %>
            <% end %>
            </ul>
          <% end %>


          </div>
        </section>
      <% end %>
</header>
  <body>
    <%= yield %>
  </body>
</html>
