<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>
        <a href="/">Media Ranker</a>
        <small>Ranking the Best of Everything</small>
      </h1>
      <nav class="navbar navbar-expand-sm">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "View top media", root_path, class: "nav-link"  %>
          </li>
          <li class="nav-item">
            <%= link_to "View all media", works_path, class: "nav-link"  %>
          </li>
          <li class="nav-item">
            <%= link_to "Add a new work", new_work_path, class: "nav-link"  %>
          </li>
          <li>
            <%= link_to "Log In", login_path, class: "nav-link btn btn-primary"  %>
          </li>
        </ul>
    </header>
    <%= yield %>
  </body>
</html>
