<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>
        <%= link_to "Media Ranker" %>
        <small> | Ranking the Best of Everything</small>
      </h1>

      <nav>
        <ul>
          <li><%= link_to "View top media" %></li>
          <li><%= link_to "View all media", works_path %></li>
          <li><%= link_to "Add a new work", new_work_path %></li>
          <li><%= link_to "View all users" %></li>
        </ul>
        <ul>
          <li><%= link_to "Log in", works_path, class: "btn btn-primary" %></li>
        </ul>
      </nav>
    </header>
    <% if flash.count > 0 %>
      <section class="flash">
        <div class="alert">
          <% flash.each do |name, message| %>
            <% if message.class == Array %>
              <ul>
                <% message.each do |msg| %>
                  <li><%= name %>: <%= msg %></li>
                <% end %>
            <% else %>
              <%= message %>
            <% end %>
              </ul>
          <% end %>
        </div>
      </section>
    <% end %>
    <%= yield %>
  </body>
</html>
