<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Media Ranker</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <a><%= link_to "View top media", root_path, :class=>"nav-link" %></a>
        
      </li>
      <li class="nav-item">
        <a><%= link_to "View all media", works_path, :class=>"nav-link" %></a>
      </li>
      <li class="nav-item">
        <a><%= link_to "Add new work", new_work_path, :class=>"nav-link" %></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" tabindex="-1">View all users</a>
      </li>
    </ul>
    
  </div>
</nav>
    </header>
    <%= yield %>
  </body>
</html>
