<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        <%= link_to 'Media Ranker', '/' %>
        <small>Ranking the Best of Everything</small>
      </h1>
      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/">View top media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works">View all media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works/new">Add a new work</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/users">View all users</a>
          </li>
        </ul>
        <ul class="nav app-header__user-nav-container">
          <li class="nav-item app-header__nav_item">
            <%= link_to 'Log In', login_path, class: "btn btn-primary" %>
          </li>
        </ul>
      </nav>
    </header>

    <% if flash[:message] %>
    <section class="alert__container">
      <% if flash[:status] == :error %>
      <div class="alert alert-danger">
      <% else %>
      <div class="alert alert-success">
      <% end %>
        <%= flash[:message] %>
      </div>
    </section>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
