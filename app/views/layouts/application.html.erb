<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Gudea' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('owl.jpg') %>
  </head>
  <body>
    <header>
      <h1>
        Media Ranker
        <small>
        Ranking the Best of Everything
        </small>
      </h1>
      <nav>
        <ul>
          <li>
            <%= link_to "View top media", root_path %>
          </li>
          <li>
            <%= link_to "View all media", works_path %>
          </li>
          <li>
            <%= link_to "Add a new work", new_work_path %>
          </li>
          <li>
            <%= link_to "View all users", users_path %>
          </li>
          <% if session[:user_id] %>
            <li class="btn btn-primary">
              <%= link_to "Logout", logout_path, method: :post %>
            </li>
          <% else %>
            <li class="btn btn-primary">
              <%= link_to "Login", login_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

<section class="flash">
  <% alert_type = flash[:status] == :error ? :danger : flash[:status] %>
  <section class="flash alert alert-<%= alert_type %>">
    <%= flash[:message] %>
  </section>
</section>

    <%= yield %>
  </body>
</html>
