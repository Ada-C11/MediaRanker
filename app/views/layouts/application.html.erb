<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <body>
    <header class="app-header__header">
      <h1>
        <%= link_to "Media Ranker", root_path %>
        <small>Ranking the Best of Everything</small>
      </h1>
      <nav class="app-header__nav">
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <%=link_to "View top media", works_path, class: "nav-link"%>
          </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "View all media", works_path, class: "nav-link"%>
          </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "Add new work", new_work_path, class: "nav-link"%>
          </li>
          <li class="nav-item app-header__nav_item">
            <%=link_to "View all users", works_path, class: "nav-link"%>
          </li>
        </ul>
        <ul class="nav app-header__user-nav-container">
        <li class="nav-item">
          <%= link_to("Login", login_path) if session[:user_id].nil? %> 
           <%= link_to("Current User", current_user_path) if session[:user_id] %>
          <% if session[:user_id] %>
          <%= link_to("Logout", logout_path, method: :post) if session[:user_id]%>
          <% end %> 
        </li>
        </ul>
      </nav> 
    </header>


    <main>
      <%= yield %>
    </main>
  </body>
</html>
