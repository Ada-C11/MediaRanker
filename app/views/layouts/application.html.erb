<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="app-header__header">
    <h1>
      <%= link_to "Media Ranker"%>
      <small>Ranking the Best of Everything</small>
    </h1>
    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <% navigation_options ={
        "View top media": root_path,
        "View all media": works_path,
        "Add a new work": new_work_path,
        "View all users": works_path,
        }%>
        <% navigation_options.each do |option_name, option_path|%>
          <li class="nav-item app-header__nav_item">
            <%= link_to option_name, option_path, class:"nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="nav app-header__user-nav-container"> 
        <li class="nav-item app-header__nav_item">
          <%= link_to "Log in", works_path, class:"btn btn-primary"%>
        </li>
      </ul>
    </nav>
  </header>
  <%if flash.count > 0 %>
    <section class="alert__container">
      <div class="alert alert-success">
      
      </div>
      <div class="alert alert-warning">
      <% flash.each do |name, message| %>
        <% if message.class == Array %>
          <ul>
          <% message.each do |msg| %>
            <li><%= name %>: <%= msg %></li>
          <% end %>
        <% else %>
          <%= message %>
        <% end %>
        </ul>
      <% end %>
      </div>
    </section>
  <% end %>
  
  <body>
    <%= yield %>
  </body>
</html>
