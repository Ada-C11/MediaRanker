<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <header>
      <h1>MediaRanker</h1>
      <h2>Ranking the Best of Everything</h2>
    

      <nav>
        <ul>
         <li>
           <%= link_to 'View top media', root_path %>
         </li>
         <li>
           <%= link_to "View all media", works_path%>
         </li>
         <li>
           <%= link_to "Add new work", new_work_path %>
         </li>
         <li>
           <%= link_to "View all users", root_path%>
         </li>
         <li>
           <%= link_to "Log In", root_path%>
         </li>
        </ul>
      </nav>
    </header>

    <main>
      <%# Is the alert type an error?  If yes, DANGER.  If no, rely on flash status %>
      <% alert_type = flash[:status] == :error ? :danger : flash[:status] %>
      <section>
        <%= flash[:message] %>
      </section>
      <%= yield %>
    </main>
  
  </body>
</html>
