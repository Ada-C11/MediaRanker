<h1>User Log In</h1>

<% form_with model: @user, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Username", class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Log In", class:"btn btn-primary" %>
  </div>
<% end %>
  
  