<h2>User Summary: <%= link_to @user.username, user_path(@user) %></h2>
<p>Joined site: <%= @user.created_at.to_date %>
<h3>Votes</h3>
<table class="table">
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.works.each do |work| %>
      <tr>
        <td><%= link_to work.title, work_path(work) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= work.category %></td>
        <td><%= work.created_at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>