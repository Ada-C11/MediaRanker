<h2>User Summary:  <%= @user.username %></h2>
<p>Joined Site <%=@user.created_at.strftime('%B %d, %Y')%></p>

<h3>Votes</h3>
    <table class=table>
        <thead>
            <tr>
                    <th>Media Title</th>
                    <th>Created By</th>
                    <th>Published</th>
                    <th>Category</th>
                    <th>Voted On</th>
            </tr>
        </thead>
        <tbody>
            <% @user.votes.each do |vote| %>
                <tr>
                    <td><%=link_to vote.work.title, work_path(vote.work.id)%></td>
                    <td><%=vote.work.creator%></td>
                    <td><%=vote.work.publication_year%></td>
                    <td><%=vote.work.category.capitalize%></td>
                    <td><%=vote.created_at.strftime('%B %d, %Y')%></td>
                </tr>
            <%end%>
        </tbody>
    </table>

<% if (session[:user_id].to_s == params[:id]) %>
<h3>Works you might like:</h3>
        <table class=table>
            <thead>
                <tr>
                        <th>Media Title</th>
                        <th>Created By</th>
                        <th>Published</th>
                        <th>Category</th>
                </tr>
            </thead>
            <tbody>
                <% @user.get_recommendations[0..4].each do |work_id| %>
                    <%work = Work.find(work_id)%>
                    <tr>
                        <td><%=link_to work.title, work_path(work_id)%></td>
                        <td><%=work.creator%></td>
                        <td><%=work.publication_year%></td>
                        <td><%=work.category.capitalize%></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    <%end%>