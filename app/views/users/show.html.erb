<h2>User Summary: <%= link_to @user.name, user_path(@user.id) %></h2>
<p>Joined site <%= @user.created_at.strftime('%B %e, %Y') %></p>
<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.votable.title, work_path(vote.votable_id) %></td>
        <td><%= vote.votable.creator %></td>
        <td><%= vote.votable.publication_year %></td>
        <td><%= vote.votable.category.capitalize %></td>
        <td><%= vote.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<%= link_to 'See all Users', users_path, class: "btn btn-secondary" %>
<%= link_to 'Back to Media List', works_path, class: "btn btn-primary" %>
