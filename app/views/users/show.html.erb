<h2> User Summary: <%= @user.username %> </h2>
<p> Joined site <%= @user.created_at.strftime("%b %d, %Y") %> </p>

<h3 class="user-votes__header"> Votes </h3>

<section class="user-votes__container">
    <table class='table'>
        <thead>
            <tr>
                <th>Media Title</th>
                <th>Created By</th>
                <th>Published</th>
                <th>Category</th>
                <th>Voted On</th>
            </tr>
        </thead>

        <tbody>
            <% if @user.votes.count > 0 %>
                <% @user.votes.each do |vote| %>
                <% work = vote.work %>
                <tr>
                    <td> <%=link_to work.title, work_path(work) %> </td>
                    <td><%= work.creator %> </td>
                    <td><%= work.publication_year %> </td>
                    <td><%= work.category %> </td>
                    <td><%= vote.created_at.strftime("%b %d, %Y") %> </td>
                </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>
</section>
