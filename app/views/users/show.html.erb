<h2>User Summary: <%= link_to @user.name, user_path(@user.id) %></h2>
<p>Joined site <%= @user.join_date.strftime('%B %e, %Y') %></p>
<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.work.title, work_path(vote.work_id) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year.strftime('%Y') %></td>
        <td><%= vote.work.category.capitalize %></td>
        <td><%= vote.date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<%= link_to 'See all Users', users_path, class: "btn btn-secondary" %>
<%= link_to 'Back to Media List', home_path, class: "btn btn-primary" %>