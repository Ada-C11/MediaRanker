<h1>User Summary: <%= @user.username %></h1>
<h4>Joined Site: <%= @user.joined_date %></h4>
<h2>Votes</h2>
<section>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Media Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Published</th>
        <th scope="col">Category</th>
        <th scope="col">Voted On</th>
        </tr>
    </thead>
    <tbody>
        <% @user.votes.each do |vote|%>
            <tr>
                <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
                <td><%= vote.work.creator %></td>
                <td><%= vote.work.publication_year %></td>
                <td><%= vote.work.category.capitalize %></td>
                <td><%= vote.created_at %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
</section>