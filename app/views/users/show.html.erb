<body>

  <main>
    <h2>User Summary: <%= @user.username %></h2>
    <p>Joined site <%= @user.created_date %></p>

    <section>
      <h3>Votes</h3>
      <table>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
        <% @user.works.each do |work| %>
          <tr>
            <td><%= link_to "#{work.title}", work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.pub_year %></td>
            <td><%= work.category.capitalize %></td>
            <td><%= @user.voted_date(work) %></td>
          </tr>
        <% end %>
      </table>

    </section>

  </main>
</body>