<h3>User summary: <%= @user.name %></h3>

<h4>Votes</h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= readable_date(vote.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to "See all Users", users_path, class:'btn' %>

<%= link_to "Back to Media List", root_path, class:'btn' %>
