<h3>User Summary: <%= @user.username %></h3>

<p>Joined site <%= @user.created_at%></p>

<h4>Votes</h4>

<section class="work">
  <% votes = Vote.where(user_id: @user.id) %>
  <% if votes.length > 0 %>
    <table class="table">
    <thead>
      <tr>
        <th scope="col">Media Title</th>
        <th scope="col">Created By</th>
        <th scope="col">Published</th>
        <th scope="col">Category</th>
        <th scope="col">Voted On</th>
        <th scope="col">Recommended</th>
      </tr> 
    </thead>
    <tbody>
    <% votes.each do |work| %>
      <tr>
        <th scope="row"><%=work.title%></th>
        <td><%=work.created_by%>
        <td><%=work.published%>
        <td><%=work.media%>
        <td><%= readable_date(work.created_at)%>
        <td><%= work.similar_items(n_results: 1).title%></td>
      </tr>
      <% end %>
  <%else%>
  <% end %>
  </tbody>
</table>
</section>
