<h2>User Summary: <%= @user.username %> </h2>
<p>Joined site <%= @user.join_date.strftime("%b %d, %Y") %> </p>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
      <% @user.works.each do |work| %>
        <tr>
          <td> <%= link_to work.title, work_path(work.id), method: :get %> </td>
          <td> <%= work.creator %> </td>
          <td> <%= work.publication_year %> </td>
          <td> <%= work.category %> </td>
          <td> <%= work.votes.find_by(user_id: @user.id).created_at.strftime("%b %d, %Y") %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<%= link_to "See All Users", users_path, class: "btn btn-secondary" %>
<%= link_to "Back to Top Media", root_path, class: "btn btn-primary" %>
