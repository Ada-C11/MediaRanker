<h2>User Summary:  <%= @user.username %></h2>
<p>Joined Site <%=@user.created_at.to_date%></p>

<h3>Votes</h3>
    <table class=table>
        <thead>
            <tr>
                    <th>Media Title</th>
                    <th>Created By</th>
                    <th>Published</th>
                    <th>Category</th>
                    <th>Voted On</th>
            </tr>
        </thead>
        <tbody>
            <% @user.votes.each do |vote| %>
                <tr>
                    <td><%=vote.work.title%></td>
                    <td><%=vote.work.creator%></td>
                    <td><%=vote.work.publication_year%></td>
                    <td><%=vote.work.category.capitalize%></td>
                    <td><%=vote.created_at.strftime('%B %e, Y')></td>
                </tr>
            <%end%>
        </tbody>
    </table>