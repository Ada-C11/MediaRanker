<main>
  <h2>
    User Summary: <%= @user.username%>
  </h2>
  <p>Joined this site Apr 27, 2019</p>
  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted on</th>
        </tr>
      </thead>
      <tr>
        <% @user.votes.each do |vote| %>
          <% id = vote.work_id %>
          <td>
            <%= Work.find_by(id: id).title%>
          </td>
          <td>
            <%= Work.find_by(id: id).creator%>
          </td>
          <td>
            <%= Work.find_by(id: id).publication_date %>
          </td>
          <td>
            <%= Work.find_by(id: id).category %>
          </td>
          <td>
            <%= readable_date(vote.created_at) %>
          </td>
        </tr>
      <% end %>
    </main>
