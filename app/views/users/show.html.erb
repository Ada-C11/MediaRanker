<h2> User Summary: <%= link_to @user.username, user_path(@user.id) %></h2>
<p>Joined site <%= @user.created_at.to_date.to_formatted_s(:long) %></p>

<section class="user-votes__container">
    <h3> Votes </h3>
    <table class="table">
        <thead>
        <tr>
            <th>Media Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Category</th>
            <th>Voted On</th>
        </tr>
        </thead>
        <tbody>
        <% @user.votes.each do |vote| %>
            <tr>
            <td><%= link_to vote.work.title, work_path(vote.work) %></td>
            <td><%= vote.work.creator %></td>
            <td><%= vote.work.publication_year %></td>
            <td><%= vote.work.category.capitalize %></td>
            <td><%= vote.created_at.to_date.to_formatted_s(:long) %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</section>
