<h2>User Summary: <%=@user.username%></h2>

<p>Joined Site: <%=@user.created_at.strftime("%b %d, %Y")%></p>

<h3>Votes</h3>
<table class="table">
    <thead>
    <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
    </tr>
    </thead>
  <% Vote.where(user_id: @user.id).each do |vote| %>
  <tbody>
    <tr>
        <td><%= link_to Work.find_by(id: vote.work_id).title, work_path(Work.find_by(id: vote.work_id)) %></td>
        <td><%= Work.find_by(id: vote.work_id).creator %></td>
        <td><%= Work.find_by(id: vote.work_id).publication_year %></td>
        <td><%= Work.find_by(id: vote.work_id).category.capitalize %></td>
        <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
    </tr>
  </tbody>
  <% end %>
</table>