<main>
  <h2>List of Users</h2>
  <table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Votes</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user.id)%></td>
        <td><%= Vote.where(user_id: user.id).count %></td>
        <td><%= user.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>  
  </tbody>
</table>
</main>